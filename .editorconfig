# Editor configuration file
# For Sublime Text install package `EditorConfig`
# For VS Code install package `editorconfig`
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[*.md]
indent_style = space
indent_size = 2
max_line_length = 100

[*.yml]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2